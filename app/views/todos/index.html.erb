<h1>To-Do List</h1>
<!-- To-Doリスト用のTurbo Frame -->
<div id="todos-list">
  <%= turbo_frame_tag"todos" do %>
    <%= render@todos %>
  <% end %>
</div>
<!-- Turbo Frame内で表示される「新しいTo-Do」フォームをトリガーするリンク -->
<%= link_to'New To-Do', new_todo_path,data: {turbo_frame: "new_todo_form" },class: "button"%>

<!-- 新規 編集用To-Doフォーム用のTurbo Frame -->
<%= turbo_frame_tag"new_todo_form" do %>
<% end %>